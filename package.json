{
  "name": "git-ai-assistant",
  "displayName": "Git AI Assistant",
  "description": "A VS Code extension that generates PR descriptions using GitHub Copilot (Copilot subscription required)",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-ai-assistant",
          "title": "Git AI Assistant",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "git-ai-assistant": [
        {
          "type": "webview",
          "id": "gitAIAssistantWebview",
          "name": "Git AI Assistant",
          "visibility": "visible"
        }
      ],
      "scm": [
        {
          "type": "webview",
          "id": "gitAIAssistantSCMView",
          "name": "PR Assistant",
          "contextualTitle": "PR Assistant",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "git-ai-assistant.generatePRDescription",
        "title": "Generate PR Description"
      },
      {
        "command": "git-ai-assistant.configureProvider",
        "title": "Configure Settings"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-ai-assistant.configureProvider",
          "when": "view == gitAIAssistantPanel",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "git-ai-assistant.generatePRDescription",
          "when": "true"
        },
        {
          "command": "git-ai-assistant.configureProvider",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Git AI Assistant",
      "properties": {
        "gitAIAssistant.copilotModelId": {
          "type": "string",
          "default": "",
          "description": "Selected GitHub Copilot model ID for generating PR descriptions"
        },
        "gitAIAssistant.templateSource": {
          "type": "string",
          "enum": [
            "custom",
            "default"
          ],
          "default": "default",
          "description": "Source for PR template: custom (stored in extension) or default (built-in template)"
        },
        "gitAIAssistant.diffSource": {
          "type": "string",
          "enum": [
            "staged",
            "commits"
          ],
          "default": "staged",
          "description": "Source for the git diff: staged changes or recent commits"
        },
        "gitAIAssistant.commitCount": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 20,
          "description": "Number of recent commits to include in the diff when using 'commits' as diff source"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "webpack --mode none",
    "lint": "eslint src --ext ts",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test:nossl": "npm run compile && node ./scripts/runTestsWithoutSSL.js",
    "test:unit": "mocha --require ts-node/register src/test/suite/**/*.test.ts",
    "test:direct": "npm run compile && node ./scripts/runUnitTests.js ./out/test/suite/**/*.test.js",
    "test:template": "npm run compile && node ./scripts/runUnitTests.js ./out/test/suite/templateManager.test.js",
    "test:bedrock:git": "node test-bedrock.js --git",
    "test:gemini": "node scripts/test-gemini.js",
    "test:gemini:git": "node scripts/test-gemini.js --git",
    "package": "vsce package --allow-star-activation",
    "publish": "vsce publish",
    "esbuild": "node esbuild.js",
    "esbuild:watch": "node esbuild.js --watch",
    "build": "npm run compile && npm run package",
    "uninstall": "rm -rf git-ai-assistant-0.4.0.vsix && node scripts/uninstall-extension.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.7",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/codicons": "^0.0.42",
    "@vscode/vsce": "^2.24.0",
    "chai": "^4.3.7",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.1",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "sinon": "^19.0.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vscode-test": "^1.6.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "publisher": "gyaneshgouraw",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/git-ai-assistant.git"
  }
}
